#!/bin/sh

abspath()
{
    case "$1" in
        
    /*)
        eval "$2=$1"
        ;;

    *)
        eval $2=`pwd`/$1
        ;;
    esac
}

abspath $0 fullpath

TEXTTEST_SLAVE_CMD=$fullpath
export TEXTTEST_SLAVE_CMD

# Sets gtk/pygtk environment variables and sets PYTHON_TO_RUN 
# to point to the full name of the python binary to run.
. /usr/local/tt-env/gtk2.10/bin/setup_python_gtk.sh

exec $PYTHON_TO_RUN -u ${fullpath}.py "$@"
