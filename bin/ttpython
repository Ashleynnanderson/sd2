#! /bin/sh

if [ -f /usr/bin/python2.4.i386 ]; then
    exec /usr/bin/python2.4.i386 "$@"
elif [ -f /usr/local/amd64/bin/python ]; then
    exec /usr/local/amd64/bin/python "$@"
else
    grep -q "release 3" /etc/redhat-release 2> /dev/null
    if [ "$?" = 0 ]; then
        exec /usr/local/tt-env/python2.4.rhel3/bin/python "$@"
    else
        exec python "$@"
    fi
fi
